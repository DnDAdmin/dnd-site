extends ../layout

block head
  title= title + 'New Item'

  style.

block content
    div(class='row mt-5')
        div(class='col-11')
            div(class='siteCont')
                h3(class='text-center') New Item
                form#itemForm(name='newitem' action='/admin/additem' method="POST" enctype="multipart/form-data")
                    div(class='row mx-auto')
                        div(class='formItem col-md-6')
                            input#name(class='formTextInput' tab-index=1 type='text' name='name' placeholder='Item Name')
                        
                        
                        
                        div(class='formItem col-md-6')
                            select#type(name='type' tab-index=2 class='formTextInput')
                                option(selected disabled value=null) --- Select Item Type ---
                                for op in types
                                    option(value=op.name)= op.name
                        
                        div(class='formItem col-2 text-center')
                            label(class='') Sellable?
                                input#sellable(name='sellable' tab-index=3 type='checkbox' checked=false)
                                div
                        
                        div(class='col-12')
                            div(class='row mx-auto')
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Cost:
                                        input#cost(class='formTextInput countable' type='number' name='cost')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Weight:
                                        input#weight(class='formTextInput countable' type='number' name='weight')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Strength:
                                        input#strength(class='formTextInput countable' type='number' name='strength')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Class:
                                        input#class(class='formTextInput countable' type='number' name='class')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Time to Equip:
                                        input#don(class='formTextInput countable' type='number' name='don')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                                div(class='formItem col-sm-6 col-lg-2')
                                    label(class='formLabel w-100' style='white-space: nowrap;') Time to Remove:
                                        input#dof(class='formTextInput countable' type='number' name='dof')
                                        div(class='countVal row mx-auto')
                                            div(class='col-3 px-0 countBut min' onclick='shiftPoint(this, false)') -
                                            div(class='col-6 px-0 text-center countNum' tab-index=4 contenteditable="true" oninput='setPoint(this)') 0
                                            div(class='col-3 px-0 countBut plus' onclick='shiftPoint(this, true)') + 
                        div(class='formItem col-md-6')
                            input#stealth(class='formTextInput' type='text' name='stealth' placeholder='Stealth')
                        
                        div(class='formItem col-12')
                            p(class='formLable') Add to shops
                            select(class='formSelInput' name='shop' multiple)
                                for shop in shops
                                    option(value=shop._id)= shop.name

                    div(class='row mx-auto mt-2')
                        div(class='col-12 text-right mt-2')
                            button#formButton(class='buttonMain button w-100 col-md-4' style='right: 0;' onclick="updateDataBase()")
                                div(class='buttonText')
                                    p#saveText() Save