extends ../layout

block head
  title= title + thisUser.userName

  style.
    .errorText {
        position: relative;
        color: red;
        font-size: 11pt;
        transition: .5s;
    }
    .profileImageCont.error {
        border: 2px solid red;
    }
    .passBut {
        font-size: 12pt;
        color: rgba(255, 255, 255, 0.856);
    }
    .passBut:hover {
        color: rgba(255, 255, 255, 0.514);
    }
    #userName {
        font-size: 8vmin;
    }
    #email {
        font-size: 5vmin;
    }
    /* small screen */
    @media (min-width: 768px) {
        #userName {
            font-size: 4vmin;
        }
        #email {
            font-size: 3vmin;
        }
    }
    .eventLink {
        color: rgba(255, 255, 255, 0.856);
    }
    .eventLink:hover {
        color: rgba(255, 255, 255, 0.856);
    }
    .event {
        position: relative;
        border-left: 2px solid rgba(255, 255, 255, 0.856);
        padding-left: 8px;
        
    }
    .event .date {
        font-size: 8pt;
        margin: 0;
    }
    .event .name {
        font-size: 14pt;
        margin: 0;
    }

    .event .name a {
        text-decoration: none;
    }

    .editLink {
        cursor: pointer;
    }
    .editLink span span {
        font-size: 8pt;
    }
    .editLink:hover {
        text-decoration: underline;
    }

